<div
  class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm"
>
  <h5 class="my-0 mr-md-auto font-weight-normal">Twister</h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <a class="p-2 text-dark <%= path === '/' ? 'active' : '' %>" href="/"
      >Home</a
    >
    <% if (isAuthenticated) { %>
    <a
      class="p-2 text-dark <%= path === '/post' ? 'active' : '' %>"
      href="/post"
      >Post</a
    >
    <%} else {%>
    <a
      class="btn btn-outline-primary  <%= path === '/login' ? 'active' : '' %>"
      href="/login"
      >Login</a
    >
    <% } %>
  </nav>
  <% if (!isAuthenticated) { %>
  <a
    class="btn btn-outline-primary <%= path === '/signup' ? 'active' : '' %>"
    href="/signup"
    >Sign up</a
  >
  <% } else { %>
  <div>
    <a href="/create"
      ><button class="btn btn-outline-primary">Create</button></a
    >
  </div>
  &nbsp; &nbsp;
  <form action="/logout" method="post">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <button class="btn btn-outline-primary" type="submit">Logout</button>
  </form>
  <% } %>
</div>
