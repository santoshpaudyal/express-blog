<%- include('../includes/base.ejs') %>
<link rel="stylesheet" href="css/form.css">

</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <h1 class="create-head">Create new Post</h1>
    <div class="form-post">
        <form action="/create" method="POST">
            <label class="label-color" for="title">Title</label>
            <input type="text" name="title" id="title" > <br/><br/>
            <label class="label-color"  for="description">Description</label>
            <textarea name="description" id="description" cols="50" rows="10" ></textarea> <br/><br/>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-outline-primary" type="submit">Create</button>
        </form>
    </div>

<%- include('../includes/end.ejs') %>